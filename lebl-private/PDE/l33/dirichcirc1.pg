Context()->flags->set(
     reduceConstants => 0,
     reduceConstantFunctions => 0,
);


$answer1 = Formula("$a r^$b cos ($b theta ) + $c r^$d sin ($d theta)");

############################
##  Main text
#

Context()->texStrings;
BEGIN_TEXT
Solve the Dirichlet problem in the circle of radius 1 using polar coordinates:
$BR
PDE: \(\quad \nabla^2 u = u_{rr} + \frac{1}{r} u_r + \frac{1}{r^2} u_{\theta\theta} = 0 \) for \(0 < r < 1\).
$BR
BC: \(\quad u(1,\theta) = $a \cos ($b \theta ) + $c \sin ($d \theta) \)
$PAR
\( u(r,\theta) = {} \) \{ ans_rule(40) \}
$BR
(Write theta for \(\theta\))
$PAR
\{ AnswerFormatHelp("formulas") \}
END_TEXT
Context()->normalStrings;


#############################
##  Answer evaluation

$showPartialCorrectAnswers = 1;

ANS( $answer1->cmp() );


#####################
# Solution

Context()->texStrings;
BEGIN_SOLUTION
${PAR}SOLUTION:$PAR
$BR
\( u(r,\theta) = $answer1 \)
END_SOLUTION
Context()->normalStrings;

;

ENDDOCUMENT();
