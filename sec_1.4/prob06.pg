## DESCRIPTION
## First-Order Linear Differential Equations
## ENDDESCRIPTION

## Institution(ASU)

DOCUMENT() ;
loadMacros(
  "PGstandard.pl",
  "PGchoicemacros.pl",
  "PGcourse.pl"
);

TEXT(beginproblem()) ;
$showPartialCorrectAnswers = 1 ;

$k = random(3,9,1) ;
$a = random(2,9,1) ;
$b = random(1,9,1) ;
$B = ($k - 1)*$b ;
$m = random(2,10,1) ;

BEGIN_TEXT

Solve the initial value problem $BR
\[  \frac{dy}{dt} -  y = $a e^t + $B e^{$k t} \] with \( y(0) = $m. \)
$PAR
\( y = \) \{ans_rule(70) \}. $BR


END_TEXT

$ans = "($m - $b )* exp(t) + $a * t * exp(t) + $b * exp($k *t)" ;


ANS(fun_cmp($ans, vars=>"t")) ;

ENDDOCUMENT() ;       
